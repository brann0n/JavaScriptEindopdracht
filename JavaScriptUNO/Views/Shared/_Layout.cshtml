<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - UNO Anywhere</title>
	<link href="~/Content/Site.css?v=1" rel="stylesheet" type="text/css" />
	<link href="~/Content/Host.css?v=1" rel="stylesheet" type="text/css" />
	<link href="~/Content/Client.css?v=1" rel="stylesheet" type="text/css" />
	<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
	<script src="~/Scripts/modernizr-2.8.3.js"></script>
	<script src="~/Scripts/jquery-3.3.1.min.js"></script>
</head>
@{ 
    int tableImageId = new Random().Next(0, 4);
	string tableImageUrl = $"/Content/UnoImages/Table_{tableImageId}.png";
}
<body style="background: url('@tableImageUrl'); background-size: cover; height:100%;">
	<div class="container body-content">
		@RenderBody()
	</div>

	<script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>